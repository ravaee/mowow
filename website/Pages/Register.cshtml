@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-wrapper">

    <div class="glass auth-box">

        <h2>Register</h2>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success">@Model.SuccessMessage</div>
            <br />
            <a asp-page="/Login" class="hero-btn login">Login</a>
        }
        else
        {
            <form method="post" class="mt-3">

                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Password</label>
                    <input type="password" asp-for="Password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                </div>

                <div class="mb-3 text-center">
                    <!-- Google reCAPTCHA -->
                    <div class="g-recaptcha"
                         data-theme="dark"
                         data-sitekey="6LeNzmkrAAAAAJ0H1sD3XnAKqdGWi9EWbsn89PWB"></div>
                </div>
                <button type="submit" class="btn-gold w-100">Create Account</button>
            </form>
        }

    </div>
</div>

<partial name="_ValidationScriptsPartial" />
